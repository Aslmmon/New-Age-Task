<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.bmi_details.presentation.BmiDetailsFragment">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:id="@+id/linear_bmi_details"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/gradient_colors_no_radius"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="60dp"
            android:background="@color/gray_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Body Mass Index"
            android:textAllCaps="true"
            android:textColor="@color/gray_color"
            android:textSize="32px" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_color" />


        <TextView
            android:id="@+id/tv_bmi_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="18.61"
            android:textColor="@color/white"
            android:textSize="255px" />

        <TextView
            android:id="@+id/tv_bmi_result_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold_700"
            android:gravity="center"
            android:text="Hello Olivia, You Are Normal"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway_regular_400"
            android:gravity="center"
            android:text="@string/normal"
            android:textColor="@color/white"
            android:textSize="25px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.example.newagetask.common.CustomCompoundButtons
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <com.example.newagetask.common.CustomCompoundButtons
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.gms.ads.nativead.NativeAdView
        android:layout_width="0dp"
        android:id="@+id/native_add"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_bmi_details"
        />

</androidx.constraintlayout.widget.ConstraintLayout>