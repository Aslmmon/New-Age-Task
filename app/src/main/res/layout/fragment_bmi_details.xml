<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_constraint"
    tools:context=".features.bmi_details.presentation.BmiDetailsFragment">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/linear_bmi_details"
        android:layout_marginTop="@dimen/sixty_four"
        android:layout_marginHorizontal="@dimen/sixty"
        android:background="@drawable/gradient_colors_no_radius"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/one"
            android:alpha="0.3"
            android:layout_marginTop="@dimen/thirty"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:gravity="center"
            android:text="@string/body_mass_index_title"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:alpha="0.3"
            android:textSize="@dimen/twelve_sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/one"
            android:layout_marginTop="@dimen/five"
            android:alpha="0.3"
            android:background="@color/white" />


        <TextView
            android:id="@+id/tv_bmi_result"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/thirty"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:singleLine="true"
            tools:text="18.61"
            android:textColor="@color/white"
            android:textSize="@dimen/ninty_two" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginHorizontal="@dimen/fifty_dp"
            />

        <TextView
            android:id="@+id/tv_bmi_result_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/PoppinsBoldStyle"
            android:layout_marginTop="@dimen/fourty_five"
            tools:text="Hello Olivia, You Are Normal"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            style="@style/RalewayRegualrStyle"
            android:gravity="center"
            android:id="@+id/normal_results_description"
            tools:text="@string/normal"
            android:textColor="@color/white"
            android:textSize="@dimen/ten_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/twenty"
            android:layout_marginTop="@dimen/fourty"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/twenty"
            android:weightSum="2">

            <com.example.newagetask.common.CustomCompoundButtons
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_share_button"
                android:src="@mipmap/share_icon"
                android:text="@string/share_title"
                android:layout_weight="1" />

            <Space
                android:layout_width="@dimen/twenty"
                android:layout_height="wrap_content" />

            <com.example.newagetask.common.CustomCompoundButtons
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_rate_button"
                android:text="@string/rate_title"
                android:src="@mipmap/star_img"
                android:layout_weight="1"

                />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ad_frame"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/five"
        android:layout_height="@dimen/one_twenty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/five"/>



</androidx.constraintlayout.widget.ConstraintLayout>