<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_constraint"
    tools:context=".features.bmi_details.presentation.BmiDetailsFragment">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/linear_bmi_details"
        android:layout_marginTop="@dimen/sixty_four"
        android:layout_marginHorizontal="@dimen/sixty"
        android:background="@drawable/gradient_colors_no_radius"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/one"
            android:alpha="0.3"
            android:layout_marginTop="@dimen/thirty"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:gravity="center"
            android:text="@string/body_mass_index_title"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:alpha="0.3"
            android:textSize="@dimen/twelve_sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/one"
            android:layout_marginTop="@dimen/five"
            android:alpha="0.3"
            android:background="@color/white" />


        <TextView
            android:id="@+id/tv_bmi_result"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            tools:text="18.61"
            android:padding="@dimen/five"
            android:textColor="@color/white"
            android:textSize="@dimen/ninty_two" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginHorizontal="50dp"
            />

        <TextView
            android:id="@+id/tv_bmi_result_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/PoppinsBoldStyle"
            android:layout_marginTop="@dimen/fourty_five"
            tools:text="Hello Olivia, You Are Normal"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            style="@style/RalewayRegualrStyle"
            android:gravity="center"
            android:id="@+id/normal_results_description"
            tools:text="@string/normal"
            android:textColor="@color/white"
            android:textSize="@dimen/ten_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/twenty"
            android:layout_marginTop="@dimen/fourty"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/twenty"
            android:weightSum="2">

            <com.example.newagetask.common.CustomCompoundButtons
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_share_button"
                android:src="@mipmap/share_icon"
                android:text="@string/share_title"
                android:layout_weight="1" />

            <Space
                android:layout_width="@dimen/twenty"
                android:layout_height="wrap_content" />

            <com.example.newagetask.common.CustomCompoundButtons
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_rate_button"
                android:text="@string/rate_title"
                android:src="@mipmap/star_img"
                android:layout_weight="1"

                />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ad_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.gms.ads.nativead.NativeAdView
        android:layout_width="0dp"
        android:id="@+id/native_add"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:minHeight="50dp"
            android:orientation="vertical">

            <TextView style="@style/Theme.NewAgeTask.AdAttribution"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ad_app_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:paddingBottom="5dp"
                        android:src="@mipmap/star_img"
                        android:paddingRight="5dp"
                        android:paddingEnd="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ad_headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#0000FF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/ad_advertiser"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="install"
                    android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>


</androidx.constraintlayout.widget.ConstraintLayout>