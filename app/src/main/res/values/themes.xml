<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewAgeTask" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="materialButtonStyle">@style/Button.gradient</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>


        <!-- Customize your theme here. -->
    </style>


    <style name="Button.gradient" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">#020e39</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/linear_gradient_color</item>
        <item name="backgroundTint">@null</item>

    </style>
</resources>