<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewAgeTask" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="materialButtonStyle">@style/Button.gradient</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="fontFamily">@font/poppins_light_300</item>


        <!-- Customize your theme here. -->
    </style>


    <style name="Button.gradient" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">#020e39</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/raleway_bold_700</item>
        <item name="android:background">@drawable/linear_gradient_color</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="RalewayRegualrStyle">
        <item name="fontFamily">@font/raleway_regular_400</item>
        <item name="android:textSize">70px</item>
        <item name="color">@color/primary</item>
    </style>

    <style name="RalewayBoldStyle">
        <item name="fontFamily">@font/raleway_bold_700</item>
    </style>
    <style name="PoppinsLightStyle">
        <item name="fontFamily">@font/poppins_light_300</item>
        <item name="android:textSize">45px</item>
    </style>
    <style name="PoppinsBoldStyle">
        <item name="fontFamily">@font/poppins_bold_700</item>
    </style>
    <style name="PoppinsRegularStyle">
        <item name="fontFamily">@font/poppins_regular_400</item>
    </style>
</resources>